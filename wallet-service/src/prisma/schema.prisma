generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  schemas = ["wallet"]
}

enum Asset {
  USDT
  BTC
  ETH
  DOGE
  DIDE
  @@schema("wallet")
}

enum Reason {
  LOCK
  RELEASE
  DEPOSIT
  WITHDRAWAL
  TRADE
  @@schema("wallet")
}

model Ledger{
  id Int @id @default(autoincrement())
  userId Int
  asset Asset
  change String
  reason Reason
  ref String
  createdAt DateTime @default(now())

  @@index([userId, asset])
  @@unique([ref, reason])
  @@schema("wallet")
}

model Lock {
  id Int @id @default(autoincrement())
  userId Int
  asset Asset
  amount Decimal
  ref String
  createdAt DateTime @default(now())

  @@index([userId, asset])
  @@schema("wallet")
}